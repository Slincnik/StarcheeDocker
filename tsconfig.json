{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",
        "outDir": "dist",
        "allowJs": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "declaration": false,
        "inlineSources": false,
        "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
